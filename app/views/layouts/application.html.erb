<!DOCTYPE html>
<html>
  <head>
    <title>WebReminder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <%- if user_auth_mail_signed_in? || user_auth_provider_signed_in? %>
        <%= link_to 'ログアウト', destroy_user_auth_mail_session_path, method: :delete %>
      <% else %>
        <%= link_to '新規登録', new_user_auth_mail_registration_path %>
        <%= link_to 'ログイン', new_user_auth_mail_session_path %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
